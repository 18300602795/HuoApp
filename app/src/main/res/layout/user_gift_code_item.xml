<?xml version="1.0" encoding="utf-8"?>
  <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ttw_mygamelist_normal"
    android:orientation="vertical"
     >
   <RelativeLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="10dip"
       android:layout_marginTop="10dip"
       android:layout_marginRight="6dip"
       android:layout_marginBottom="10dip"
       >
       <ImageView 
           android:id="@+id/iv_game_icon"
           android:layout_width="66dip"
           android:layout_height="66dip"
           android:scaleType="fitXY"
           android:background="@drawable/ic_launcher"
           />
       <LinearLayout
           android:layout_marginLeft="10dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_toRightOf="@id/iv_game_icon"
           android:layout_centerVertical="true"
           >
           <TextView 
              android:id="@+id/tv_game_name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="18sp"
              android:textColor="#464646"
              android:text="《天天飞车》"/>
           
           <LinearLayout 
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:id="@+id/ll_code_show"
               android:visibility="visible"
               android:layout_marginLeft="10dp"
               android:layout_marginTop="8dp"
               >
              <TextView 
                android:id="@+id/tv_gamegift_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/orange_6"
                android:padding="6dip"
                android:text="sdasdasd"/>
              <TextView
                android:visibility="gone"
                android:id="@+id/tv_gift_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/red1"
                android:layout_marginLeft="8dip"
                android:padding="6dip"
                android:text="0%"/>
          </LinearLayout>
       </LinearLayout>
   </RelativeLayout> 
   
   <RelativeLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
       android:layout_marginLeft="10dip"
       android:layout_marginRight="6dip"
       >
     <TextView 
        android:id="@+id/tv_gift_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/orange_5"
        android:text="礼包内容："/>
     <TextView
        android:id="@+id/tv_gift_detail" 
        android:layout_toRightOf="@id/tv_gift_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:singleLine="true"
        android:textColor="#818181"
        android:text="铜钱50万，仙魂*1，2级宝石袋*1，中混珠*10"/>
  </RelativeLayout>
  
  <RelativeLayout 
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="6dip"
      android:background="@color/cody_blg1"
      >


     <TextView 
        android:id="@+id/tv_start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:text="起止时间：2014-03-11 2014-3-12"/>

     <TextView 
        android:id="@+id/tv_copy_code"
        android:layout_width="50dip"
        android:layout_height="30dip"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/gray"
        android:background="@drawable/ttw_copy_button"
        android:layout_marginLeft="8dip"
        android:padding="6dip"
        android:text="复制"/>
  </RelativeLayout>
</LinearLayout>
