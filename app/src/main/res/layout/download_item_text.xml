<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="75dip"
                android:paddingTop="10dip"
                android:paddingBottom="5dip"
                android:background="@drawable/ttw_mygamelist_normal"
    >
    <ImageView
        android:id="@+id/iv_game_icon"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip"
        android:layout_alignParentTop="true"
        />
    <TextView
        android:id="@+id/tv_game_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_game_icon"
        android:layout_alignTop="@id/iv_game_icon"
        android:textSize="14sp"
        android:text="真龙玩玩"
        android:textStyle="bold"
        android:layout_marginLeft="8dip"/>
    <RelativeLayout
        android:id="@+id/rl_open"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_alignTop="@id/tv_game_name"
        android:layout_height="60dip"
        android:gravity="center_vertical"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        >
        <TextView
            android:id="@+id/tv_download"
            android:text="暂停"
            android:layout_width="50dip"
            android:layout_height="30dip"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_down"
            android:gravity="center"
            android:textSize="12sp"
            android:paddingLeft="12dip"
            android:paddingRight="12dip"
            android:paddingTop="6dip"
            android:paddingBottom="6dip"
            android:layout_marginRight="6dip"
            />
    </RelativeLayout>

    <TableLayout
        android:id="@+id/tl_gift"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_game_icon"
        android:layout_below="@id/tv_game_name"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="80dip"
        android:paddingBottom="5dip"

        android:gravity="center_vertical"
        >
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            >
            <TextView
                android:id="@+id/tv_game_size"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="45.18M"
                android:textColor="@color/gray_text"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/tv_net_speed"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="549K/s"
                android:textSize="12sp"
                android:textColor="@color/gray_text"
                />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dip"
            >
            <ProgressBar
                android:id="@+id/progressBar1"
                android:layout_width="0dip"
                android:layout_height="5dip"
                android:layout_weight="1"
                style="?android:attr/progressBarStyleHorizontal"
                android:progressDrawable="@drawable/ttw_progressbar_style"
                android:progress="0"
                android:max="100" />
        </TableRow>
    </TableLayout>

    <View
        android:id="@+id/v_line"
        android:layout_below="@id/iv_game_icon"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="5dip"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/gray1"
        />

    <TableLayout
        android:id="@+id/tl_gift_delete"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/v_line"
        android:background="@color/cody_blg1"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:paddingTop="5dip"
        android:paddingBottom="5dip"
        android:gravity="center_vertical"
        >
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            >
            <LinearLayout
                android:id="@+id/ll_delete"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ttw_mygame_icon_uninstall"
                    />
                <TextView
                    android:id="@+id/tv_ignore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="删除"
                    />
            </LinearLayout>
        </TableRow>
    </TableLayout>
</RelativeLayout>
