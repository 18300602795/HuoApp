<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="500dp"
              android:orientation="vertical">

    <include layout="@layout/userconter_head"
        />

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dip"
        android:layout_marginLeft="16dip"
        android:layout_marginRight="16dip"
        android:layout_marginTop="20dip"
        android:background="@drawable/ttw_edit_selector"
        android:hint="请输入手机号码 "
        android:padding="6dip"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <EditText
            android:id="@+id/et_auth_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dip"
            android:layout_marginLeft="16dip"
            android:layout_marginRight="16dip"
            android:layout_marginTop="20dip"
            android:background="@drawable/ttw_edit_selector"
            android:hint="请输入验证码"
            android:padding="6dip"
            />

        <Button
            android:id="@+id/get_auto_code"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:text="获取验证码"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:background="@drawable/money_btn1"
            android:layout_centerInParent="true"
            android:layout_marginRight="25dp"
            android:textSize="15dp"
            />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_copy_code"
        android:gravity="center"
        android:padding="12dip"
        android:text="下一步"
        android:textColor="@color/white_ab"
        android:textSize="17sp"
        />


    <TextView
    android:layout_marginTop="20dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="未绑定手机号的用户"
    android:textColor="#A3A3A3"
    android:layout_marginLeft="20dp"
    android:textSize="17sp"
    />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请联系客服QQ：2947549134"
        android:textColor="#A3A3A3"
        android:layout_marginLeft="20dp"
        android:textSize="17sp"

        />
</LinearLayout>